---
import '@/styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  canonical?: string;
}

const {
  title = 'Emanuele Toma - Web Developer and DevOps',
  description = "Hi, I'm Emanuele Toma, a Web Developer and DevOps Engineer. I craft efficient web solutions and robust infrastructure, bridging the gap between development and operations.",
  keywords = 'Emanuele Toma, Web Developer, DevOps Engineer, Cloud, Infrastructure, Automation',
  canonical = 'https://toma.gg',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonical} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:keywords" content={keywords} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="antialiased bg-black text-slate-200 selection:bg-cyan-500/30">
    {/* Background Effects */}
    <div class="fixed inset-0 -z-10 h-full w-full bg-black">
      <div
        class="absolute top-0 z-[-2] h-screen w-screen bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
      >
      </div>
      <div class="absolute bottom-0 left-0 z-[-2] h-[500px] w-[500px] rounded-full bg-purple-900/20 blur-[120px]"></div>
      <div class="absolute bottom-0 right-0 z-[-2] h-[500px] w-[500px] rounded-full bg-cyan-900/20 blur-[120px]"></div>
    </div>

    <div class="fixed inset-0 -z-10 opacity-20 pointer-events-none"></div>
    <slot />
    <script>
      import Tracker from '@openreplay/tracker';

      const tracker = new Tracker({
        projectKey: 'K3FtY9IVWTvWwSxtVS5N',
      });

      tracker.start();
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
